<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="scrollview_layoutparams">
        <attr name="scrollview_alpha" format="boolean"></attr>
        <attr name="scrollview_scaleX" format="boolean"></attr>
        <attr name="scrollview_scaleY" format="boolean"></attr>
        <attr name="scrollview_fromBgcolor" format="color"></attr>
        <attr name="scrollview_toBgcolor" format="color"></attr>
        <attr name="scrllview_translation"></attr>
    </declare-styleable>
        <attr name="scrllview_translation">
            <flag name="fromTop" value="0x01"></flag>
            <flag name="fromRight" value="0x02"></flag>
            <flag name="fromBottom" value="0x04"></flag>
            <flag name="fromLeft" value="0x08"></flag>
        </attr>
</resources>