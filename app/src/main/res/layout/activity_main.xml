<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="workhi.minto.com.animationframework.MainActivity">

    <workhi.minto.com.animationframework.CustomScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/scrollView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.52">

        <workhi.minto.com.animationframework.CustomLinearlayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:src="@mipmap/ic_launcher"
                app:scrollview_alpha="true"
                app:scrllview_translation = "fromRight|fromTop"
                app:scrollview_scaleX = "true"
                app:scrollview_scaleY = "true"

                android:layout_height="200dp"/>

            <TextView
                android:text="anination frame"
                android:textSize="20sp"
                app:scrollview_fromBgcolor="#234567"
                app:scrollview_toBgcolor="#934543"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:scrllview_translation = "fromRight|fromTop"
                app:scrollview_scaleX = "true"
                app:scrollview_scaleY = "true"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:text="anination frame"
                android:textSize="20sp"
                app:scrollview_fromBgcolor="#534237"
                app:scrollview_toBgcolor="#034543"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:src="@mipmap/ic_launcher"
                app:scrllview_translation = "fromRight|fromTop"
                app:scrollview_scaleX = "true"
                app:scrollview_scaleY = "true"
                android:layout_height="200dp"/>
            <TextView
                android:text="anination frame"
                android:textSize="20sp"
                app:scrollview_fromBgcolor="#345657"
                app:scrollview_toBgcolor="#444444"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
            <ImageView
                android:layout_width="match_parent"
                app:scrllview_translation = "fromRight|fromTop"
                app:scrollview_scaleX = "true"
                app:scrollview_scaleY = "true"
                android:src="@mipmap/ic_launcher_round"
                android:layout_height="150dp"/>
            <TextView
                android:text="anination frame"
                android:textSize="20sp"
                app:scrollview_fromBgcolor="#222222"
                app:scrollview_toBgcolor="#777777"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        </workhi.minto.com.animationframework.CustomLinearlayout>
    </workhi.minto.com.animationframework.CustomScrollView>

</android.support.constraint.ConstraintLayout>
